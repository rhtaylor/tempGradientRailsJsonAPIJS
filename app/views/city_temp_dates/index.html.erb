<h1>City Temp Dates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>City</th>
      <th>Temp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @city_temp_dates.each do |city_temp_date| %>
      <tr>
        <td><%= city_temp_date.date %></td>
        <td><%= city_temp_date.city_id %></td>
        <td><%= city_temp_date.temp_id %></td>
        <td><%= link_to 'Show', city_temp_date %></td>
        <td><%= link_to 'Edit', edit_city_temp_date_path(city_temp_date) %></td>
        <td><%= link_to 'Destroy', city_temp_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

